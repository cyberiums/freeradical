# FreeRadical CMS v1.0.3 - Default Configuration
# PostgreSQL (Recommended - 30-129% faster in benchmarks)

# Application
APP_BIND_ADDRESS=0.0.0.0
APP_BIND_PORT=8000
APP_JWT_KEY=change-this-secret-key-in-production
APP_MAX_REQ=100
APP_BASE_URL=http://localhost:8000

# PostgreSQL Database (Default)
DATABASE_URL=postgres://freeradical:password@localhost:5432/freeradical
POSTGRES_USER=freeradical
POSTGRES_PASSWORD=password
POSTGRES_DB=freeradical
POSTGRES_PORT=5432

# MySQL compatibility (not used with PostgreSQL, but required by app)
APP_MYSQL_USERNAME=unused
APP_MYSQL_PASSWORD=unused
APP_MYSQL_DATABASE=unused
APP_MYSQL_URL=unused
APP_MYSQL_PORT=3306

# Redis
REDIS_URL=redis://localhost:6379
REDIS_PORT=6379
# REDIS_CLUSTER_NODES=redis://node1:6379,redis://node2:6379

# Logging
RUST_LOG=info

# Optional: Payment Providers
# STRIPE_SECRET_KEY=sk_test_...
# PAYPAL_CLIENT_ID=...
# PAYPAL_CLIENT_SECRET=...
# PAYPAL_SANDBOX=true
# SQUARE_ACCESS_TOKEN=...
# SQUARE_SANDBOX=true

# Multi-Region Support
# S3 Storage (Required for Multi-Region)
# APP_AWS_ACCESS_KEY_ID=...
# APP_AWS_SECRET_ACCESS_KEY=...
# APP_AWS_REGION=us-east-1
# APP_AWS_S3_BUCKET=my-bucket
# APP_CDN_URL=https://d12345.cloudfront.net

# Read Replica Database (Optional)
# DATABASE_URL_READ=postgres://freeradical:password@replica-host:5432/freeradical
