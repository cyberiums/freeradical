# Production Environment Variables
# Copy this file to .env.production and fill in the values

# Database
DATABASE_URL=mysql://freeradical:CHANGE_ME@localhost:3306/freeradical_prod
DATABASE_POOL_SIZE=20

# Redis Cache
REDIS_URL=redis://localhost:6379
CACHE_ENABLED=true
CACHE_TTL=3600

# Server
APP_BASE_URL=https://your-domain.com
SERVER_HOST=0.0.0.0
SERVER_PORT=8000
RUST_LOG=info

# Security
JWT_SECRET=CHANGE_THIS_TO_RANDOM_64_CHAR_STRING
JWT_EXPIRATION=86400
CORS_ALLOWED_ORIGINS=https://your-domain.com,https://admin.your-domain.com

# Media
MAX_UPLOAD_SIZE=10485760
ALLOWED_EXTENSIONS=jpg,jpeg,png,gif,webp,svg,pdf
UPLOAD_PATH=/var/www/freeradical/uploads

# Email (optional)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USERNAME=noreply@your-domain.com
SMTP_PASSWORD=CHANGE_ME
SMTP_FROM=FreeRadical CMS <noreply@your-domain.com>

# OAuth (optional)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# Analytics (optional)
ANALYTICS_ENABLED=true
ANALYTICS_RETENTION_DAYS=90

# Backup (optional)
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_PATH=/var/backups/freeradical
